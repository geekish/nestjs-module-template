{
  "extends": ["config:base"],
  "semanticCommits": "enabled",
  "assigneesFromCodeOwners": true,
  "packageRules": [
    {
      "depTypeList": ["devDependencies"],
      "automerge": true
    },
    {
      "updateTypes": ["major"],
      "labels": ["major-update", "dependencies"]
    },
    {
      "updateTypes": ["minor"],
      "labels": ["minor-update", "dependencies"]
    },
    {
      "updateTypes": ["patch"],
      "labels": ["patch-update", "dependencies"]
    }
  ],
  "schedule": ["every weekday"]
}
